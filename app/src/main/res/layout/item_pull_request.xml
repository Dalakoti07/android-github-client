<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:foreground="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/space_md"
        android:layout_height="wrap_content">

        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@id/sixty_percent_guideline"
            android:id="@+id/tv_title"
            android:textSize="@dimen/text_size_md"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="My first PR for retrofit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#3AB0FF"
            android:text="@string/created_by"
            android:layout_marginTop="@dimen/space_xs"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_width="wrap_content"
            android:id="@+id/tv_created_by_text"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_created_by"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@id/sixty_percent_guideline"
            android:textColor="@color/black"
            tools:text="Dalakoti07"
            android:layout_marginStart="@dimen/space_md"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_created_by_text"
            app:layout_constraintStart_toEndOf="@id/tv_created_by_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#3AB0FF"
            android:text="@string/created_on"
            android:layout_marginTop="@dimen/space_xs"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_created_by_text"
            android:layout_width="wrap_content"
            android:id="@+id/tv_created_at_text"
            android:layout_height="wrap_content"/>

        <TextView
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@id/sixty_percent_guideline"            android:id="@+id/tv_created_at"
            android:textColor="@color/black"
            tools:text="8th Aug 2022"
            android:layout_marginStart="@dimen/space_md"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_created_at_text"
            app:layout_constraintStart_toEndOf="@id/tv_created_at_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#3AB0FF"
            android:text="@string/closed_on"
            android:layout_marginTop="@dimen/space_xs"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_created_at_text"
            android:layout_width="wrap_content"
            android:id="@+id/tv_closed_on_text"
            android:layout_height="wrap_content"/>

        <TextView
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@id/sixty_percent_guideline"
            android:id="@+id/tv_closed_on"
            android:textColor="@color/black"
            tools:text="9th Aug 2022"
            android:layout_marginStart="@dimen/space_md"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_closed_on_text"
            app:layout_constraintStart_toEndOf="@id/tv_closed_on_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/sixty_percent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"
            />

        <ImageView
            tools:src="@drawable/ic_launcher_background"
            android:layout_marginStart="@dimen/space_md"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sixty_percent_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_avatar"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
